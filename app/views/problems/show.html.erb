<div class="row">

  <div class="large-6 columns">
    <h2>
      <strong>Title:</strong>
      <%= @problem.title %>
    </h2>

    <p>
      <strong>Description:</strong>
      <%= @problem.description %>
    </p>


    <p>
      <strong>Tried:</strong>
      <%= @problem.tried %>
    </p>

    <div id="notes">
      <%= render @notes %>
    </div>
  </div>

  <div class="large-6 columns">
    <%= render 'notes/form' %>
    <%= link_to 'Back', problems_path %>
  </div>

</div>

