<h1>Open Problems:</h1>
<div class="post">
<p>
  <%= link_to 'Post new problem', new_problem_path %>
</p>
</div>


<table>
  <thead>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Description</th>
    <th>Created</th>
    <th colspan="4"></th>
  </tr>
  </thead>

  <tbody>
  <% @problems.order("created_at ASC").where(solved: nil).each do |problem| %>
      <tr>
        <td><%= problem.user_email || "none" %></td>
        <td><%= problem.title %></td>
        <td><%= problem.description.slice(0,80) %></td>
        <td><%= problem.created_at %></td>
        <td><%= link_to 'Show', problem %></td>
        <td><%= link_to 'Edit', edit_problem_path(problem) %></td>
        <td><%= link_to 'Destroy', problem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to "Mark solved", problem_path(problem), method: :patch  %></td>
      </tr>
  <% end %>
  </tbody>
</table>



<h1>Closed Problems:</h1>

<table>
  <thead>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Description</th>
    <th>Created</th>
  </tr>
  </thead>

  <tbody>
  <% @problems.order("created_at ASC").where(solved: true).each do |problem| %>
      <tr>
        <td><%= problem.user_email || "none" %></td>
        <td><%= problem.title %></td>
        <td><%= problem.description.slice(0,80) %></td>
        <td><%= problem.created_at %></td>
      </tr>
  <% end %>
  </tbody>
</table>




